<%= form_for @sample do |f| %>
  <fieldset>
    <legend>
      Sample
    </legend>
    <ul>
      <li>
        Name:
        <%= @sample.name %>
      </li>
      <li>
        <%= f.label :concentration %>
        <%= f.text_field :concentration %>
      </li>
      <li>
        <%= f.label :fragment_size %>
        <%= f.text_field :fragment_size %>
      </li>
      <li>
        <%= f.label :qc_state, 'QC state' %>
        <%= f.select :qc_state, Sample.qc_states.keys %>
      </li>
    </ul>
    <%= f.submit %>
  </fieldset>
<% end %>